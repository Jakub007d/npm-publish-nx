{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": true
    },
    "lint": {
      "cache": true
    }
  },
  "defaultBase": "main",
    "release": {
    "projects": [
      "packages/*"
    ],
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true,
      "fallbackCurrentVersionResolver": "disk"
    },
    "git": {
      "commitMessage": "chore(release): publish [skip ci]"
    }
  }
}
